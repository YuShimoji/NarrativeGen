              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "name",
                  "value": "Imported Model",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/models/import",
              "host": ["{{base_url}}"],
              "path": ["models", "import"]
