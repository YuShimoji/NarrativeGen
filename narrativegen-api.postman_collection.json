      "value": "",
      "type": "string"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-update model_id and session_id from responses",
          "if (pm.response.code === 201 && pm.request.url.path.includes('models')) {",
          "    const response = pm.response.json();",
          "    if (response.id) {",
          "        pm.collectionVariables.set('model_id', response.id);",
          "    }",
          "}",
          "",
          "if (pm.response.code === 201 && pm.request.url.path.includes('sessions')) {",
          "    const response = pm.response.json();",
          "    if (response.id) {",
          "        pm.collectionVariables.set('session_id', response.id);",
          "    }",
          "}"
        ]
      }
    }
  ]
}
