    {
      "name": "Model Management",
      "item": [
        {
          "name": "GET List Models",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{bearer_token}}",
                "type": "text"
              }
            ],
