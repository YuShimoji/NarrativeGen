            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"test-model-001\",\n  \"name\": \"Test Narrative Model\",\n  \"description\": \"A simple test model for API validation\",\n  \"version\": \"1.0.0\",\n  \"startNode\": \"node1\",\n  \"nodes\": {\n    \"node1\": {\n      \"id\": \"node1\",\n      \"text\": \"You find yourself at a crossroads. Which path do you choose?\",\n      \"choices\": [\n        {\n          \"id\": \"choice1\",\n          \"text\": \"Take the left path\",\n          \"target\": \"node2\"\n        },\n        {\n          \"id\": \"choice2\",\n          \"text\": \"Take the right path\",\n          \"target\": \"node3\"\n        }\n      ]\n    },\n    \"node2\": {\n      \"id\": \"node2\",\n      \"text\": \"You find a hidden treasure! The end.\",\n      \"type\": \"ending\"\n    },\n    \"node3\": {\n      \"id\": \"node3\",\n      \"text\": \"You encounter a dragon and must flee. The end.\",\n      \"type\": \"ending\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/models",
              "host": ["{{base_url}}"],
              "path": ["models"]
            },
            "description": "Create a new narrative model"
          }
        },
        {
          "name": "GET Get Model by ID",
          "request": {
            "method": "GET",
