# NarrativeGen Environment Configuration
# Copy this file to .env.local for local development overrides

# Development Server Configuration
VITE_DEV_PORT=5173
VITE_DEV_HOST=0.0.0.0

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_OPENAI_API_KEY=

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_ADVANCED_GRAPH=true

# Performance Settings
VITE_MAX_GRAPH_NODES=100
VITE_STORY_VIRTUAL_SCROLL=true
VITE_CSV_CHUNK_SIZE=100

# Logging Configuration
VITE_LOG_LEVEL=info
VITE_MAX_LOG_ENTRIES=100

# Model Configuration
VITE_DEFAULT_MODEL=linear
VITE_MODELS_PATH=/models
